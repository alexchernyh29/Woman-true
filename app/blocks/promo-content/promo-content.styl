.promo-content
    position relative
    +below(768px)
        margin-bottom wm(255)

    &__text
        position relative
        margin 0 auto
        max-width w(710)
        padding-bottom w(70)
        margin-bottom w(25)
        font-size w(20)
        line-height w(35)
        color $c-white
        text-transform uppercase
        font-family $CenturyGothic
        +below(768px)
            font-size wm(14)
            line-height wm(22)
            max-width 100%
            padding-bottom wm(30)
            margin-bottom wm(40)

        &::after
            content ''
            position absolute
            bottom w(35)
            left 0
            right 0
            height 1px
            background-color $c-white
            +below(768px)
                bottom 0

    
    &__row
        padding 0 w(240) 0 w(130)
        display flex
        flex-flow row nowrap
        justify-content space-between
        align-items flex-start
        +below(768px)
            flex-flow column-reverse
            padding 0
    
    &__quotes
        width w(540)
        padding-top w(65)
        +below(768px)
            padding-top 0
            width 100%
    
    &__quote
        font-family $TrajanPro3
        font-size w(35)
        line-height w(45)
        text-transform uppercase
        color $c-grey
        +below(768px)
            font-size wm(30)
            line-height wm(40)
            &:last-child
                padding-left wm(70)
    
    &__info
        position relative
        width w(860)
        +below(768px)
            width 100%
            margin-bottom wm(50)

        &::after
            content ''
            position absolute
            top 0
            bottom 0
            left w(-40)
            width w(16)
            background url('/images/promo-arrow.svg') no-repeat bottom center
            background-size cover
            +below(768px)
                display none

    &__info-text
        font-family $CenturyGothic
        font-size w(20)
        line-height w(34)
        color $c-white
        margin-bottom w(40)
        +below(768px)
            font-size wm(16)
            line-height wm(26)
            margin-bottom wm(30)

        &:last-child
            margin-bottom 0